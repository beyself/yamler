			},
			onHide: function (colpkr) {
				$(colpkr).fadeOut(500);
				return false;
			},
			onChange: function (hsb, hex, rgb) {
				$('.colorSelector div, header, .sf-menu li:hover, .sf-menu li.sfHover, .sf-menu li.current-menu-item').css('backgroundColor', '#' + hex);
				$('.sf-menu li').hover(
				        function() {
				            $(this).css('backgroundColor', '#' + hex);
				        },
				        function() {
				            $(this).css('backgroundColor', '');
				        }
				 );
				$('.sf-menu li').hover(
				        function() {
				            $(this).css('backgroundColor', '#' + hex);
				        },
				        function() {
				            $(this).css('backgroundColor', '#' + hex);
				        }
				 );
				

				
				$('.sf-menu li li').hover(
				        function() {
				            $(this).css('backgroundColor', '#f8f8f8');
				        },
				        function() {
				            $(this).css('backgroundColor', '#f8f8f8');
				        }
				 );

				

			}
		});
